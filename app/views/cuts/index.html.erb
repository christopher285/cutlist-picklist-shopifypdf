<p id="notice"><%= notice %></p>
<h1>Maps</h1>
<div id='map'></div>
<h1>Listing Cuts</h1>
<%= form_tag checked_cuts_path, method: :put do %>
<table>
  <thead>
    <tr>
      <th></th>	
      <th>Orderid</th>
      <th>Product</th>
      <th>Size</th>
      <th>Quantity</th>
      <th>Cut?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuts.each do |cut| %>
      <tr>
	<td><%= check_box_tag "cut_ids[]", cut.id %></td>
        <td><%= cut.orderid %></td>
        <td><%= cut.product %></td>
        <td><%= cut.size %>   </td>
        <td><%= cut.quantity %></td>
	<td><%= cut.done ? "YES" : "NO" %></td>
        <td><%= link_to 'Show', cut %></td>
        <td><%= link_to 'Edit', edit_cut_path(cut) %></td>
        <td><%= link_to 'Destroy', cut, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= submit_tag "Print Cutlist" %>
<% end %>
<br>

