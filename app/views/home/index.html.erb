<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Home",
        icon: "<%= asset_path('favicon.ico') %>"
      });
    });
  </script>
<% end %>

<h2>Products</h2>

<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.title, "https://#{@shop_session.url}/admin/products/#{product.id}", target: "_top" %></li>
  <% end %>
</ul>

<h2>Orders</h2>


<div>

  <% @orders.each do |element| %>
<% element.line_items.each do |line_item| %>
<tr>
<td><%= line_item.title %></td>
<td><%= line_item.quantity %></td>
</tr>
  <% end %>
  <% end %>
======================
</div>
<div>



</div>

<p id="notice"><%= notice %></p>

<h1>Listing Cuts</h1>

<table>
  <thead>
    <tr>
      <th>Orderid</th>
      <th>Product</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cuts.each do |cut| %>
      <tr>
        <td><%= cut.orderid %></td>
        <td><%= cut.product %></td>
        <td><%= cut.quantity %></td>
        <td><%= link_to 'Show', cut %></td>
        <td><%= link_to 'Edit', edit_cut_path(cut) %></td>
        <td><%= link_to 'Destroy', cut, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

